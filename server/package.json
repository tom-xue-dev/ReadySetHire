{
  "name": "readysethire-server",
  "version": "1.0.0",
  "description": "ReadySetHire backend API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "npx prisma migrate reset",
    "db:studio": "npx prisma studio",
    "test": "jest",
    "test:unit": "jest --config jest.unit.config.js",
    "test:integration": "cross-env NODE_ENV=test jest src/__tests__/integration",
    "test:integration:auto": "cross-env NODE_ENV=test STOP_DOCKER_AFTER_TESTS=false jest src/__tests__/integration",
    "test:integration:clean": "cross-env NODE_ENV=test STOP_DOCKER_AFTER_TESTS=true jest src/__tests__/integration",
    "test:watch": "jest --watch",
    "test:watch:unit": "jest src/__tests__/unit --watch",
    "test:watch:integration": "jest src/__tests__/integration --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest src/__tests__/unit --coverage",
    "test:coverage:integration": "jest src/__tests__/integration --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "docker:build": "docker build -t readysethire-backend .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --remove-orphans"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "interview",
    "recruitment",
    "api"
  ],
  "author": "ReadySetHire Team",
  "license": "MIT"
}
